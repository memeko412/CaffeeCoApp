@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    ViewData["HomePage"] = true;
}

<div style="background-color : #08618d">
    <div class="container text-white py-5">
        <div class="row align-items-center g-5">
            <div class="col-md-6">
                <h1 class="col-md-5 display-2"><strong>CaffeeCo, epic coffee</strong></h1>
                <p>Find the best coffee products and accessories here</p>
            </div>
            <div class="col-md-6 text-center">
                <img src="/images/homebanner.jpg" class="img-fluid" alt="hero" />
            </div>
        </div>
    </div>
</div>

<div class="bg-light">
    <div class="container py-4">
        <h2 class="pb-4 text-center">Latest Arrivals</h2>

        <div class="row mb-5 g-3">
            @foreach(var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="rounded border shadow p-3 text-center h-100">
                        <img src="/products/@product.ImageFileName" class="img-fluid" alt="..." style="height:180px; object-fit:contain" />
                        <hr />
                        <h5 class="py-2">@product.Name</h5>
                        <p>Brand: @product.Brand</p>
                        <p>Category: @product.Category</p>
                        <h4 class="mb-3">$@(product.Price)</h4>
                        <p>Rating: <i class="bi bi-star-fill"></i>@(product.Rating)(@(product.RatingCount))</p>
                        <a class="btn btn-primary btn-sm mb-2" asp-controller="Shop" asp-action="Details" 
                            asp-route-id="@product.Id" role="button">Details</a>
                        <button type="button" class="btn btn-warning btn-sm mb-2">
                            Add to Cart<i class="bi bi-cart4"></i>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>